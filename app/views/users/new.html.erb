<div class = "main_container">
<div class = "information">
<h3>スケジュール新規作成</h3>
</div>
<%= render partial: 'shared/flash' %>
<%= render partial: 'shared/error', locals: { user: @user } %>
    <%= form_for @user do |f| %>
      <table>
        <tr>
          <th><%= f.label :tytle ,"タイトル" %></th>
          <td><%= f.text_field :tytle %></td>
        </tr>
 
        <tr>
          <th><%= f.label :start_at ,"開始日" %></th>
          <td><%= f.date_field  :start_at %></td>
        </tr>
 
        <tr>
          <th><%= f.label :end_at ,"終了日" %></th>
          <td><%= f.date_field :end_at %></td>
        </tr>
 
        <tr>
          <th><%= f.label :all_day ,"終日" %></th>
          <td><%= f.check_box :all_day, {}, true, false %>
           <%= "終日の場合はチェックを入れてください"%></td>
        </tr>

        <tr>
        <th><%= f.label :memo ,"スケジュールメモ" %></th>
        <td><%= f.text_area :memo %></td>
      </table>
 
      <div>
        <ul>
          <li><%= f.submit "登録完了する"%></li>
          <li><%= link_to "スケジュール一覧に戻る", :users %></li>
        </ul>
      </div>
    <% end %>
 </div>